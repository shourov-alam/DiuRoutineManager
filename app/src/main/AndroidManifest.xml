<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.al.diuroutinemanager">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activity.About"  android:theme="@style/AppTheme2"></activity>
        <activity android:name=".Activity.StudentProfile"  android:theme="@style/AppTheme2"/>
        <activity android:name=".Activity.TeacherProfile"  android:theme="@style/AppTheme2"/>
        <activity android:name=".Activity.ForgetPass" android:theme="@style/AppTheme2" />
        <activity android:name=".Activity.Register"  android:theme="@style/AppTheme2"/>
        <activity android:name=".Activity.LogIn"  android:theme="@style/AppTheme2"/>
        <activity
            android:name=".Activity.Splash"
            android:theme="@style/AppTheme1">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Activity.MainActivity"
            android:theme="@style/AppTheme1" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>